{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Swift",
        "type": "shell",
        "command": "swift build",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$swiftc"]
      },
      {
        "label": "Run Swift",
        "type": "shell",
        "command": "swift run",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": ["$swiftc"]
      }
    ]
  }